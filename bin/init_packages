#!/bin/bash

self="$(\curl -sS https://gitee.com/zw963/deployment_bash/raw/0.7.8/deploy_start.sh)" && eval "$self"

export_variable target=$1
export_variable package=$2
export_variable domain_name=$3

if [ -z "$package" ]; then
    echo 'Specify one arg for which package to install.'
    exit
fi

deploy_start

case "$package" in
    pg)
        deploy_pg 14
        ;;
    zhparser)
        deploy_pg_zhparser
        ;;
    nodejs)
        deploy_nodejs
        ;;
    nginx)
        deploy_nginx
        deploy_nginx_bri_support
        deploy_certbot
        ;;
    tls)
        deploy_tls "$domain_name"
        ;;
    chrome)
        deploy_chrome
        ;;
    *)
        echo 'Specify one arg for which package to install.'
esac
