<div class="row">
  <div class="col s12">
    <%== create_form('news-complete', placeholder: '输入关键字') %>
    <%== create_form(
      'add-ts-keyword',
      placeholder: '新增自定义关键字',
      action: '/add-ts-keyword',
      param: 'new_keyword',
      method: 'post',
      icon: 'send',
      grid_offset: 'offset-s1'
    ) %>
    <%== create_form(
      'remove-ts-keyword',
      placeholder: '删除自定义关键字',
      action: '/remove-ts-keyword',
      param: 'keyword',
      method: 'post',
      icon: 'send',
      grid_offset: 'offset-s1'
    ) %>
    <%== create_form(
      'sync-ts-keyword',
      placeholder: '更新自定义关键字',
      action: '/sync-ts-keyword',
      method: 'post',
      icon: 'send',
      grid_offset: 'offset-s1'
    ) %>
  </div>
</div>

<% if @error_message.present? %>
  <p><%== @error_message %></p>
<% end %>

<table class="highlight centered responsive-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>标题</th>
      <th><%== link_path('消息来源', 'source') %></th>
      <th><%== link_path('发布时间', 'publish_time') %></th>
    </tr>
  </thead>
  <tbody>
    <%== each_partial(@news, 'investings/news', local: :news_item) %>
  </tbody>
</table>

<%== paginate @news %>
