<% if @log.present? %>
  <h3>Start at: <%== @log.created_at_string %></h3>
  <h3>Finished at: <%== @log.finished_at_string  %></h3>
<% end %>

<div class="row">
  <div class="col s12">
    <%== create_form('stock-complete', placeholder: '输入股票代码', param: 'stock_name') %>
  </div>
</div>

<table class="highlight centered responsive-table">
  <thead>
    <tr>
      <th><%== link_path('股票', 'stock_name') %></th>
      <th><%== link_path('日期', 'date') %></th>
      <th><%== link_path('机构名称', 'name') %></th>
      <th><%== link_path('机构季度变动百分比', 'quarterly_changes_percent') %></th>
      <th><%== link_path('机构季度变动数量', 'quarterly_changes') %></th>
      <th><%== link_path('机构持有数量', 'number_of_holding') %></th>
      <th><%== link_path('占股票百分比', 'percent_of_shares_for_stock') %></th>
      <th><%== link_path('占机构百分比', 'percent_of_shares_for_institution') %></th>
      <th><%== link_path('市场价值', 'market_value') %></th>
      <th>机构平均成本</th>
      <th>创建时间</th>
    </tr>
  </thead>
  <tbody>
    <%== each_partial(@institution_histories, 'institution_histories/institution_history') %>
  </tbody>
</table>

<% content_for(:footer) do %>
  We have <%= @institution_histories.count %> institutions information.
<% end %>
