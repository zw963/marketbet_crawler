<tr>
  <td><a href="/stocks/<%= institution_history['stock_id'] %>"><%= institution_history['股票'] %></a></td>
  <td><%= institution_history['日期'] %></td>
  <td>
    <%
    institution_id = institution_history['institution_id']
    institution_name = institution_history['机构名称']
    institution_url = "/institutions/#{institution_id}"
    %>
  <a class='institution-history-dropdown-trigger' href='<%= institution_url %>' data-target='dropdown1' data-institution-id="<%= institution_id %>" ><%= institution_name %></a>
  </td>
  <td><%= institution_history['机构季度变动百分比'] %></td>
  <td class="<%= institution_history['颜色'] %>-text"><%= institution_history['机构季度变动数量'] %></td>
  <td><%= institution_history['机构持有数量'] %></td>
  <td><%= institution_history['占股票百分比'] %></td>
  <td><%= institution_history['占机构百分比'] %></td>
  <td><%= institution_history['市场价值'] %></td>
  <td><%= institution_history['机构平均成本'] %></td>
  <td><%= institution_history['创建时间'] %></td>
</tr>
