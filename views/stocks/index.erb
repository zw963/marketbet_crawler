<form action="/stocks" method="get">
  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input type="text" name="name" id="autocomplete-input" class="autocomplete">
          <label for="autocomplete-input">输入股票代码</label>
        </div>
      </div>
    </div>
  </div>
</form>
  
<table class="highlight centered responsive-table">
  <thead>
    <tr>
      <th><%== link_path('ID', 'id') %></th>
      <th><%== link_path('股票名称', 'name') %></th>
      <th><%== link_path('交易所名称', 'exchange_name') %></th>
      <th><%== link_path('机构持股占比', 'percent_of_institutions') %></th>
      <th><%== link_path('IPO 发行数量', 'ipo_amount') %></th>
      <th><%== link_path('IPO 发行价区间', 'ipo_price') %></th>
      <th><%== link_path('IPO 融资金额', 'ipo_placement') %></th>
      <th><%== link_path('IPO 日期', 'ipo_date') %></th>
    </tr>
  </thead>
  <tbody>
    <%== each_partial(@stocks, 'stocks/stock') %>
  </tbody>
</table>

<%-
next_page = @stocks.next_page
prev_page = @stocks.prev_page
page_size = @stocks.page_size
%>

<% if prev_page %>
  <a href="/stocks?page=<%= @stocks.prev_page %>&per=<%= page_size  %>">previous page</a>
<% end %>
<% if next_page %>
  <a href="/stocks?page=<%= next_page %>&per=<%= page_size %>">next page</a>
<% end %>

<% content_for(:footer) do %>
  We have <%= @stocks.count %> stocks.
<% end %>

<% content_for(:title) do %>
  Stock list
<% end %>

<% content_for(:page_title) do %>
  <a href="/stocks">Stock list</a>
<% end %>
